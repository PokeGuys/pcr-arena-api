{
  "name": "pcr-arena-api",
  "version": "0.0.1",
  "private": true,
  "description": "API for Priconne Arena",
  "homepage": "https://github.com/PokeGuys/pcr-arena-api#readme",
  "bugs": {
    "url": "https://github.com/PokeGuys/pcr-arena-api/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PokeGuys/pcr-arena-api.git"
  },
  "license": "MIT",
  "author": "PokeGuys",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "prepare": "is-ci || husky install",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "swagger:build": "npx nestjs-command generate:swagger",
    "test": "yarn run test:unit && yarn run test:e2e",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:e2e:cov": "jest --config ./test/jest-e2e.json --coverage",
    "test:e2e:watch": "jest --config ./test/jest-e2e.json --watch",
    "test:unit": "jest",
    "test:unit:cov": "jest --coverage",
    "test:unit:watch": "jest --watch"
  },
  "dependencies": {
    "@fastify/static": "6.5.0",
    "@mikro-orm/core": "5.4.2",
    "@mikro-orm/migrations": "5.4.2",
    "@mikro-orm/nestjs": "5.1.2",
    "@mikro-orm/postgresql": "5.4.2",
    "@mikro-orm/reflection": "5.4.2",
    "@mikro-orm/sql-highlighter": "1.0.1",
    "@nestjs/axios": "0.1.0",
    "@nestjs/common": "9.0.11",
    "@nestjs/config": "2.2.0",
    "@nestjs/core": "9.0.11",
    "@nestjs/platform-fastify": "9.0.11",
    "@nestjs/swagger": "6.1.2",
    "@nestjs/terminus": "9.1.2",
    "async-mutex": "0.3.2",
    "axios": "0.27.2",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "date-fns": "2.29.3",
    "fastify": "4.4.0",
    "fastify-swagger": "5.2.0",
    "mongoose": "6.5.5",
    "msgpack-lite": "0.1.26",
    "nestjs-command": "3.1.2",
    "nestjs-i18n": "9.1.10",
    "nestjs-pino": "3.1.1",
    "p-throttle": "4.1.1",
    "pino": "8.4.2",
    "pino-http": "8.2.1",
    "ramda": "0.28.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.5.7",
    "uuid": "9.0.0",
    "yargs": "17.5.1"
  },
  "devDependencies": {
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-angular": "17.1.0",
    "@commitlint/config-conventional": "17.1.0",
    "@mikro-orm/cli": "5.4.2",
    "@mikro-orm/seeder": "5.4.2",
    "@nestjs/cli": "9.1.4",
    "@nestjs/schematics": "9.0.3",
    "@nestjs/testing": "9.0.11",
    "@types/jest": "29.0.3",
    "@types/msgpack-lite": "0.1.8",
    "@types/node": "18.7.2",
    "@types/ramda": "0.28.15",
    "@types/supertest": "2.0.12",
    "@types/uuid": "8.3.4",
    "@types/yargs": "17.0.13",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "eslint": "8.52.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-jest": "27.4.3",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.1.1",
    "husky": "8.0.1",
    "is-ci": "3.0.1",
    "jest": "29.0.3",
    "lint-staged": "13.0.3",
    "prettier": "2.8.8",
    "sort-package-json": "1.57.0",
    "source-map-support": "0.5.21",
    "supertest": "6.2.4",
    "ts-jest": "28.0.8",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "4.8.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  }
}
